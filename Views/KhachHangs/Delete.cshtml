@model Quanlybanhang.Models.KhachHang

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/AdminLTE3.cshtml";
}

<h1 style="text-align:center;color:chocolate">Xóa Khách Hàng</h1>
<div>
    <h4>KhachHang</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên Khách Hàng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoTenKh)
        </dd>
        <dt class = "col-sm-2">
            Địa Chỉ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiachiKh)
        </dd>
        <dt class = "col-sm-2">
            Số Điện Thoại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DienThoai)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaKh" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
