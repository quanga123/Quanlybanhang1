@model Quanlybanhang.Models.ChiTietHd

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLTE3.cshtml";
}

<h1 style="text-align:center;color:chocolate">Tạo mới thông tin chi tiết cá nhân</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaHd" class="control-label">Mã Hóa Đơn</label>
                <select asp-for="MaHd" class ="form-control" asp-items="ViewBag.MaHd"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaSp" class="control-label">Mã Sản Phẩm</label>
                <select asp-for="MaSp" class ="form-control" asp-items="ViewBag.MaSp"></select>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label">Số Lượng</label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

